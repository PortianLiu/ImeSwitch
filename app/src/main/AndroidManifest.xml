<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 声明WRITE_SECURE_SETTINGS权限（需要通过ADB授予） -->
    <uses-permission android:name="android.permission.WRITE_SECURE_SETTINGS"
        tools:ignore="ProtectedPermissions" />
    
    <!-- 通知权限（Android 13+需要） -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:icon="@android:drawable/ic_menu_preferences"
        android:label="@string/app_name"
        android:roundIcon="@android:drawable/ic_menu_preferences"
        android:supportsRtl="true"
        android:theme="@style/Theme.ImeSwitch"
        tools:targetApi="31">

        <!-- 主Activity -->
        <activity
            android:name=".ui.MainActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- 输入法选择Activity (透明,用于长按快捷开关) -->
        <activity
            android:name=".ui.ImeSelectionActivity"
            android:exported="true"
            android:theme="@style/Theme.Transparent"
            android:excludeFromRecents="true"
            android:taskAffinity=""
            android:launchMode="singleTask">
            <!-- 处理来自TileService的长按 -->
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE_PREFERENCES" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <!-- 快速设置瓦片服务 -->
        <service
            android:name=".service.ImeSwitchTileService"
            android:icon="@android:drawable/ic_menu_preferences"
            android:label="@string/tile_label"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE"
            android:exported="true">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>

    </application>

</manifest>
